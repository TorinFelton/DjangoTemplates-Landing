{
  "definitions": {
    "media": {
      "binaryEncoding": "base64",
      "type": "img/png"
    }
  },
  "$schema": "http://json-schema.org/schema#",
  "$id": "DjangoTemplates-Landing/contexts/landing_schema.json",
  "type": "object",
  "title": "Landing Page",
  "required": [
    "page",
    "nav_bar",
    "masthead",
    "features",
    "showcase",
    "testimonial_title",
    "testimonials",
    "call_to_action",
    "footer",
    "footer_text",
    "footer_icons"
  ],
  "properties": {
    "page": {
      "$id": "#/properties/page",
      "type": "object",
      "title": "Page Details",
      "required": [
        "title",
        "author",
        "description"
      ],
      "properties": {
        "title": {
          "$id": "#/properties/page/properties/title",
          "type": "string",
          "title": "Page Title",
          "default": "",
          "examples": [
            "Landing Page - Start Bootstrap Theme"
          ],
          "pattern": "^(.*)$"
        },
        "author": {
          "$id": "#/properties/page/properties/author",
          "type": "string",
          "title": "Page Author",
          "default": "",
          "examples": [
            ""
          ],
          "pattern": "^(.*)$"
        },
        "description": {
          "$id": "#/properties/page/properties/description",
          "type": "string",
          "title": "Page Description",
          "default": "",
          "examples": [
            ""
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "nav_bar": {
      "$id": "#/properties/nav_bar",
      "type": "object",
      "title": "Navigation Bar",
      "required": [
        "title",
        "sign_in"
      ],
      "properties": {
        "title": {
          "$id": "#/properties/nav_bar/properties/title",
          "type": "string",
          "title": "Navbar Title",
          "default": "",
          "examples": [
            "Start Bootstrap"
          ],
          "pattern": "^(.*)$"
        },
        "sign_in": {
          "$id": "#/properties/nav_bar/properties/sign_in",
          "type": "string",
          "title": "Navbar Sign-in Button Text",
          "default": "",
          "examples": [
            "Sign In"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "masthead": {
      "$id": "#/properties/masthead",
      "type": "object",
      "title": "Masthead",
      "required": [
        "img",
        "title",
        "email_text",
        "submit_btn"
      ],
      "properties": {
        "img": {
          "$id": "#/properties/masthead/properties/img",
          "type": "string",
          "title": "Background Image",
          "media": {
              "binaryEncoding": "base64",
              "type": "img/png"
          },
          "default": "",
          "examples": [
            "landing_template/img/bg-masthead.jpg"
          ],
          "pattern": "^(.*)$"
        },
        "title": {
          "$id": "#/properties/masthead/properties/title",
          "type": "string",
          "title": "Title of Masthead",
          "default": "",
          "examples": [
            "Build a landing page for your business or project and generate more leads!"
          ],
          "pattern": "^(.*)$"
        },
        "email_text": {
          "$id": "#/properties/masthead/properties/email_text",
          "type": "string",
          "format": "email",
          "title": "Email TextBox Text",
          "default": "",
          "examples": [
            "Enter your email..."
          ],
          "pattern": "^(.*)$"
        },
        "submit_btn": {
          "$id": "#/properties/masthead/properties/submit_btn",
          "type": "string",
          "title": "Submit Button Text",
          "default": "",
          "examples": [
            "Sign up!"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "features": {
      "$id": "#/properties/features",
      "type": "array",
      "title": "Features Section",
      "items": {
        "$id": "#/properties/features/items",
        "type": "object",
        "title": "Feature Item",
        "required": [
          "title",
          "description",
          "icon"
        ],
        "properties": {
          "title": {
            "$id": "#/properties/features/items/properties/title",
            "type": "string",
            "title": "Feature Name",
            "default": "",
            "examples": [
              "Fully Responsive"
            ],
            "pattern": "^(.*)$"
          },
          "description": {
            "$id": "#/properties/features/items/properties/description",
            "type": "string",
            "title": "Feature Description",
            "default": "",
            "examples": [
              "This theme will look great on any device, no matter the size!"
            ],
            "pattern": "^(.*)$"
          },
          "icon": {
            "$id": "#/properties/features/items/properties/icon",
            "type": "string",
            "title": "Feature Icon",
            "default": "",
            "examples": [
              "icon-screen-desktop"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "showcase": {
      "$id": "#/properties/showcase",
      "type": "array",
      "title": "Showcase Section",
      "items": {
        "$id": "#/properties/showcase/items",
        "type": "object",
        "title": "Showcase Item",
        "required": [
          "class",
          "img",
          "title",
          "description"
        ],
        "properties": {
          "class": {
            "$id": "#/properties/showcase/items/properties/class",
            "type": "string",
            "title": "Showcase Class (CSS)",
            "default": "col-lg-6 order-lg-2 text-white showcase-img",
            "examples": [
              "col-lg-6 order-lg-2 text-white showcase-img"
            ],
            "pattern": "^(.*)$"
          },
          "img": {
            "$id": "#/properties/showcase/items/properties/img",
            "type": "string",
            "title": "Showcase Image",
            "default": "landing_template/img/bg-showcase-1.jpg",
            "media": {
                "binaryEncoding": "base64",
                "type": "img/png"
            },
            "examples": [
              "landing_template/img/bg-showcase-1.jpg"
            ],
            "pattern": "^(.*)$"
          },
          "title": {
            "$id": "#/properties/showcase/items/properties/title",
            "type": "string",
            "title": "Showcase Title",
            "default": "",
            "examples": [
              "Fully Responsive Design"
            ],
            "pattern": "^(.*)$"
          },
          "description": {
            "$id": "#/properties/showcase/items/properties/description",
            "type": "string",
            "title": "Showcase Description",
            "default": "",
            "examples": [
              "When you use a theme created by Start Bootstrap, you know that the theme will look great on any device, whether it's a phone, tablet, or desktop the page will behave responsively!"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "testimonial_title": {
      "$id": "#/properties/testimonial_title",
      "type": "string",
      "title": "Testimonial Section Title",
      "default": "",
      "examples": [
        "What people are saying..."
      ],
      "pattern": "^(.*)$"
    },
    "testimonials": {
      "$id": "#/properties/testimonials",
      "type": "array",
      "title": "Testimonial Section",
      "items": {
        "$id": "#/properties/testimonials/items",
        "type": "object",
        "title": "Testimonials",
        "required": [
          "img",
          "name",
          "quote"
        ],
        "properties": {
          "img": {
            "$id": "#/properties/testimonials/items/properties/img",
            "type": "string",
            "title": "Testimonial Profile Picture",
            "default": "landing_template/img/testimonials-1.jpg",
            "media": {
                "binaryEncoding": "base64",
                "type": "img/png"
            },
            "examples": [
              "landing_template/img/testimonials-1.jpg"
            ],
            "pattern": "^(.*)$"
          },
          "name": {
            "$id": "#/properties/testimonials/items/properties/name",
            "type": "string",
            "title": "Testimonial Name",
            "default": "",
            "examples": [
              "Margaret E."
            ],
            "pattern": "^(.*)$"
          },
          "quote": {
            "$id": "#/properties/testimonials/items/properties/quote",
            "type": "string",
            "title": "Testimonial Quote",
            "default": "",
            "examples": [
              "\"This is fantastic! Thanks so much guys!\""
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "call_to_action": {
      "$id": "#/properties/call_to_action",
      "type": "object",
      "title": "Call to Action Section",
      "required": [
        "img",
        "title",
        "email_text",
        "submit_btn"
      ],
      "properties": {
        "img": {
          "$id": "#/properties/call_to_action/properties/img",
          "type": "string",
          "title": "Background Image",
          "default": "",
          "media": {
              "binaryEncoding": "base64",
              "type": "img/png"
          },
          "examples": [
            "landing_template/img/bg-masthead.jpg"
          ],
          "pattern": "^(.*)$"
        },
        "title": {
          "$id": "#/properties/call_to_action/properties/title",
          "type": "string",
          "title": "Title",
          "default": "",
          "examples": [
            "Ready to get started? Sign up now!"
          ],
          "pattern": "^(.*)$"
        },
        "email_text": {
          "$id": "#/properties/call_to_action/properties/email_text",
          "type": "string",
          "title": "Email TextBox Sample Text",
          "default": "",
          "format": "email",
          "examples": [
            "Enter your email..."
          ],
          "pattern": "^(.*)$"
        },
        "submit_btn": {
          "$id": "#/properties/call_to_action/properties/submit_btn",
          "type": "string",
          "title": "Submit Button Text",
          "default": "",
          "examples": [
            "Sign up!"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "footer": {
      "$id": "#/properties/footer",
      "type": "array",
      "title": "Footer Section",
      "items": {
        "$id": "#/properties/footer/items",
        "type": "object",
        "title": "Footer Item",
        "required": [
          "name",
          "href"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/footer/items/properties/name",
            "type": "string",
            "title": "Item Name",
            "default": "",
            "examples": [
              "About"
            ],
            "pattern": "^(.*)$"
          },
          "href": {
            "$id": "#/properties/footer/items/properties/href",
            "type": "string",
            "title": "Item Link",
            "default": "",
            "format": "url",
            "examples": [
              "#"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "footer_text": {
      "$id": "#/properties/footer_text",
      "type": "string",
      "title": "Footer Section Text",
      "default": "",
      "examples": [
        "Â© Your Website 2019. All Rights Reserved."
      ],
      "pattern": "^(.*)$"
    },
    "footer_icons": {
      "$id": "#/properties/footer_icons",
      "type": "array",
      "title": "Footer Section Icons",
      "items": {
        "$id": "#/properties/footer_icons/items",
        "type": "object",
        "title": "Icons",
        "required": [
          "name",
          "href"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/footer_icons/items/properties/name",
            "type": "string",
            "title": "Icon Code",
            "default": "",
            "examples": [
              "fa-facebook"
            ],
            "pattern": "^(.*)$"
          },
          "href": {
            "$id": "#/properties/footer_icons/items/properties/href",
            "type": "string",
            "title": "Icon Link",
            "default": "",
            "format": "url",
            "examples": [
              "#"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}